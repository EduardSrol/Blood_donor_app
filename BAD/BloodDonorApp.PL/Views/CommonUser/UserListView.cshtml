@model BloodDonorApp.PL.Models.CommonUserListViewModel

@{
    ViewBag.Title = "BDA Users";
    var rowNumber = 1;
    var isAdmin = User.IsInRole("Admin") || User.IsInRole("RootAdmin");
    var visibleFor_cent = isAdmin ? "text-align:center;" : "text-align:center; display:none";
    var visibleFor_left = isAdmin ? "text-align:left;" : "text-align:center; display:none";
}

<div class="container body-content">
    <h1>All users</h1>
    <br/>

    <table class="table" style="font-size:100%">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First name</th>
                <th scope="col">Last name</th>
                <th scope="col">Blood type</th>
                <th scope="col" style="@visibleFor_left">Email</th>
                <th scope="col" style="@visibleFor_left">IsDeleted</th>
                <th scope="col" class="" style="@visibleFor_cent">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Users)
            {
                <tr>
                    <th scope="row">@(rowNumber++)</th>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.BloodType</td>
                    <td style="@visibleFor_left">@item.Email</td>
                    <td style="@visibleFor_left">@item.IsDeleted</td>
                    <td class="row" style="@visibleFor_cent">
                        <button type="button" class="boxed-btn-edit" title="Edit user" onclick="location.href='@Url.Action("EditExtended", "CommonUser", new { id = item.Id })'">Edit</button>
                        <button type="button" class="boxed-btn-details" title="Show details for @item.FirstName">Details</button>
                        <button id="deleteSoftBtn_@rowNumber" type="button" class="boxed-btn-softdelete" title="Delete user (soft)" onclick="DeleteUserSoft('@item.Id');">Soft delete</button>
                        <button id="deleteBtn_@rowNumber" type="button" class="boxed-btn-delete" data-toggle="modal" data-target="#myModal" title="Delete user" onclick="FillNameToModalForDelete('@item.FirstName', '@item.LastName', '@item.Id');">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



<!-- Modal -->
<div id="myModal" class="modal" role="dialog" tabindex="-1" data-backdrop="false">
    <div class="modal-dialog">
        <input type="hidden" id="userId-hdn" value="" />
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" style="text-align:left">Are you sure? - This action is irreversible!</h4>
                <button type="button" class="close" data-dismiss="modal" onclick="() => (document.getElementById('modalP').innerHTML = '')">&times;</button>
            </div>
            <div id="modalContent" class="modal-body">
                <p id="modalP"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="boxed-btn" data-dismiss="modal" onclick="DeleteUser()">Yes</button>
            </div>
        </div>
    </div>
</div>

<script>
    var deletingSoft = false;
    function FillNameToModalForDelete(name, lastname, id) {
        document.getElementById("modalP").innerHTML = 'Do you really want to delete user <b>' + name + ' ' + lastname + '? </b><br/><i>This operation delete user and all related data (Blood donations etc.).</i>';
        $("#userId-hdn").val(id);
        deletingSoft = false;
    }

    function DeleteUser() {
        var id = $("#userId-hdn").val();
        $.ajax({
            type: "POST",
            url: "@Url.Action("DeleteUser", "CommonUser")",
            data: { id: id },
            success: function () {
                alert("User has been succesfully deleted.");
                $("#userId-hdn").val("");
                $("#modalContent").innerHTML = '';
                location.reload();
            }
        });
    }

    function DeleteUserSoft(id) {
        $.ajax({
            type: "POST",
            url: "@Url.Action("DeleteUserSoft", "CommonUser")",
            data: { id: id },
            success: function () {
                $("#userId-hdn").val("");
                $("#modalContent").innerHTML = '';
                location.reload();
            }
        });
    }
</script>
