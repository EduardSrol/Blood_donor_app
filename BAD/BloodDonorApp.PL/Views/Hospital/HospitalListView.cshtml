@model BloodDonorApp.PL.Models.HospitalListViewModel

@{
    ViewBag.Title = "HospitalListView";
    var rowNumber = 1;
    var isAdmin = User.IsInRole("Admin");
    var visibleFor = isAdmin ? "text-align:center;" : "text-align:center; display:none";
}

<div class="container body-content">
    <h1>All hospitals</h1>
    <br />
    <table class="table" style="font-size:150%">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Street</th>
                <th scope="col">City</th>
                <th scope="col" style="@visibleFor">Actions</th>
            </tr>
        </thead>

        @foreach (var item in Model.Hospitals)
        {
            <tr>
                <td scope="row">@(rowNumber++)</td>
                <td>@item.Name</td>
                <td>@item.Street</td>
                <td>@item.City</td>
                <td class="" style="@visibleFor">
                    <button type="button" class="boxed-btn-details" title="Show details for @item.Name" onclick="location.href='@Url.Action("Details", "Hospital", new { id = item.Id })'">Details</button>
                </td>
            </tr>

        }
    </table>
    <hr />
    <button type="button" class="boxed-btn" style="@visibleFor" title="Add new Hospital" onclick="location.href='@Url.Action("Create", "Hospital")'">Add new Hospital</button>
</div>

