@model BloodDonorApp.PL.Models.HospitalListViewModel

@{
    ViewBag.Title = "HospitalListView";
    var rowNumber = 1;
}
<div class="container body-content">
    <h2>All hospitals</h2>
    <table class="table" style="font-size:150%">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Street</th>
                <th scope="col">City</th>
                <th scope="col" style="text-align:center">Actions</th>
            </tr>
        </thead>

        @foreach (var item in Model.Hospitals)
        {
            <tr>
                <td scope="row">@(rowNumber++)</td>
                <td>@item.Name</td>
                <td>@item.Street</td>
                <td>@item.City</td>
                <td class="" style="text-align:center">
                    <button type="button" class="boxed-btn-details" title="Show details for @item.Name" onclick="location.href='@Url.Action("Details", "Hospital", new { id = item.Id })'">Details</button>
                </td>
            </tr>
        }

    </table>
</div>

